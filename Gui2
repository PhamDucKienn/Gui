-- Create the ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "EnhancedGUI"
ScreenGui.ResetOnSpawn = true -- Ensures the GUI resets when the player respawns

-- Parent the GUI to the player's PlayerGui
local player = game.Players.LocalPlayer
ScreenGui.Parent = player:WaitForChild("PlayerGui")

-- Create the main frame
local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 500, 0, 350) -- Size: 500x350 pixels
Frame.Position = UDim2.new(0.5, 0, 0.5, 0) -- Centered on screen
Frame.AnchorPoint = Vector2.new(0.5, 0.5) -- Ensure proper centering
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.BackgroundTransparency = 0.1
Frame.BorderSizePixel = 0
Frame.Parent = ScreenGui

-- Add a rounded corner effect to the frame
local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 20)
UICorner.Parent = Frame

-- Create the tab container (left side)
local TabContainer = Instance.new("Frame")
TabContainer.Size = UDim2.new(0, 150, 1, 0) -- 150x350 pixels
TabContainer.Position = UDim2.new(0, 0, 0, 0)
TabContainer.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
TabContainer.BorderSizePixel = 0
TabContainer.Parent = Frame

-- Add a rounded corner effect to the tab container
local TabContainerCorner = Instance.new("UICorner")
TabContainerCorner.CornerRadius = UDim.new(0, 10)
TabContainerCorner.Parent = TabContainer

-- Tab Buttons (Left side buttons for switching tabs)
local Tab1Button = Instance.new("TextButton")
Tab1Button.Size = UDim2.new(1, 0, 0, 60) -- Full width, height 60
Tab1Button.Position = UDim2.new(0, 0, 0, 0)
Tab1Button.BackgroundColor3 = Color3.fromRGB(70, 150, 250)
Tab1Button.Text = "Tab 1"
Tab1Button.TextColor3 = Color3.fromRGB(255, 255, 255)
Tab1Button.TextScaled = true
Tab1Button.Font = Enum.Font.Gotham
Tab1Button.Parent = TabContainer

local Tab2Button = Instance.new("TextButton")
Tab2Button.Size = UDim2.new(1, 0, 0, 60) -- Full width, height 60
Tab2Button.Position = UDim2.new(0, 0, 0, 60)
Tab2Button.BackgroundColor3 = Color3.fromRGB(70, 150, 250)
Tab2Button.Text = "Tab 2"
Tab2Button.TextColor3 = Color3.fromRGB(255, 255, 255)
Tab2Button.TextScaled = true
Tab2Button.Font = Enum.Font.Gotham
Tab2Button.Parent = TabContainer

-- Create the content frame for each tab (right side)
local ContentFrame = Instance.new("Frame")
ContentFrame.Size = UDim2.new(1, -150, 1, 0) -- 350x350 pixels (the right side)
ContentFrame.Position = UDim2.new(0, 150, 0, 0)
ContentFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
ContentFrame.Parent = Frame

-- Add a rounded corner effect to the content frame
local ContentCorner = Instance.new("UICorner")
ContentCorner.CornerRadius = UDim.new(0, 20)
ContentCorner.Parent = ContentFrame

-- Tab 1 Content
local Tab1Content = Instance.new("Frame")
Tab1Content.Size = UDim2.new(1, 0, 1, 0)
Tab1Content.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Tab1Content.Visible = false
Tab1Content.Parent = ContentFrame

local Tab1ButtonInTab1 = Instance.new("TextButton")
Tab1ButtonInTab1.Size = UDim2.new(0, 200, 0, 50)
Tab1ButtonInTab1.Position = UDim2.new(0.5, 0, 0.5, -60)
Tab1ButtonInTab1.AnchorPoint = Vector2.new(0.5, 0.5)
Tab1ButtonInTab1.BackgroundColor3 = Color3.fromRGB(70, 150, 250)
Tab1ButtonInTab1.Text = "Button in Tab 1"
Tab1ButtonInTab1.TextColor3 = Color3.fromRGB(255, 255, 255)
Tab1ButtonInTab1.TextScaled = true
Tab1ButtonInTab1.Font = Enum.Font.Gotham
Tab1ButtonInTab1.Parent = Tab1Content

-- Tab 2 Content
local Tab2Content = Instance.new("Frame")
Tab2Content.Size = UDim2.new(1, 0, 1, 0)
Tab2Content.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Tab2Content.Visible = false
Tab2Content.Parent = ContentFrame

local Tab2ButtonInTab2 = Instance.new("TextButton")
Tab2ButtonInTab2.Size = UDim2.new(0, 200, 0, 50)
Tab2ButtonInTab2.Position = UDim2.new(0.5, 0, 0.5, -60)
Tab2ButtonInTab2.AnchorPoint = Vector2.new(0.5, 0.5)
Tab2ButtonInTab2.BackgroundColor3 = Color3.fromRGB(70, 150, 250)
Tab2ButtonInTab2.Text = "Button in Tab 2"
Tab2ButtonInTab2.TextColor3 = Color3.fromRGB(255, 255, 255)
Tab2ButtonInTab2.TextScaled = true
Tab2ButtonInTab2.Font = Enum.Font.Gotham
Tab2ButtonInTab2.Parent = Tab2Content

-- Tab button hover effects
local function onHover(button)
    button.BackgroundColor3 = Color3.fromRGB(90, 170, 255)
end

local function onLeave(button)
    button.BackgroundColor3 = Color3.fromRGB(70, 150, 250)
end

Tab1Button.MouseEnter:Connect(function() onHover(Tab1Button) end)
Tab1Button.MouseLeave:Connect(function() onLeave(Tab1Button) end)

Tab2Button.MouseEnter:Connect(function() onHover(Tab2Button) end)
Tab2Button.MouseLeave:Connect(function() onLeave(Tab2Button) end)

-- Tab button click actions (switching tabs)
Tab1Button.MouseButton1Click:Connect(function()
    Tab1Content.Visible = true
    Tab2Content.Visible = false
end)

Tab2Button.MouseButton1Click:Connect(function()
    Tab1Content.Visible = false
    Tab2Content.Visible = true
end)

-- Button click actions inside the tabs
Tab1ButtonInTab1.MouseButton1Click:Connect(function()
    print("Button in Tab 1 clicked!")
end)

Tab2ButtonInTab2.MouseButton1Click:Connect(function()
    print("Button in Tab 2 clicked!")
end)

-- Set default tab
Tab1Content.Visible = true
Tab2Content.Visible = false
