--// Enhanced GUI Script for Roblox

-- Create the ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "EnhancedGUI"

-- Parent the GUI to the player's PlayerGui
local player = game.Players.LocalPlayer
ScreenGui.Parent = player:WaitForChild("PlayerGui")

-- Create the main frame
local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 500, 0, 350) -- Size: 500x350 pixels (bigger frame)
Frame.Position = UDim2.new(0.5, 0, 0.5, 0) -- Centered on screen
Frame.AnchorPoint = Vector2.new(0.5, 0.5) -- Ensure proper centering
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.BackgroundTransparency = 0.1
Frame.BorderSizePixel = 0
Frame.Parent = ScreenGui

-- Add a rounded corner effect to the frame
local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 20)
UICorner.Parent = Frame

-- Create a title label
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, 0, 0, 60) -- Full width, height 60
Title.Position = UDim2.new(0, 0, 0, 0)
Title.BackgroundTransparency = 1
Title.Text = "Enhanced GUI"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextScaled = true
Title.Font = Enum.Font.GothamBold
Title.Parent = Frame

-- Create a button
local Button = Instance.new("TextButton")
Button.Size = UDim2.new(0, 250, 0, 80) -- Size: 250x80 pixels (bigger button)
Button.Position = UDim2.new(0.5, 0, 0.7, 0) -- Centered within the frame, lower position
Button.AnchorPoint = Vector2.new(0.5, 0.5) -- Ensure proper centering
Button.BackgroundColor3 = Color3.fromRGB(70, 150, 250)
Button.Text = "Click Me!"
Button.TextColor3 = Color3.new(1, 1, 1)
Button.TextScaled = true
Button.Font = Enum.Font.Gotham
Button.Parent = Frame

-- Add a rounded corner effect to the button
local ButtonCorner = Instance.new("UICorner")
ButtonCorner.CornerRadius = UDim.new(0, 15)
ButtonCorner.Parent = Button

-- Add a hover effect to the button
Button.MouseEnter:Connect(function()
    Button.BackgroundColor3 = Color3.fromRGB(90, 170, 255)
end)

Button.MouseLeave:Connect(function()
    Button.BackgroundColor3 = Color3.fromRGB(70, 150, 250)
end)

-- Add functionality to the button
Button.MouseButton1Click:Connect(function()
    print("Button clicked!")
    -- Example action: Change button text
    Button.Text = "Clicked!"
    wait(2)
    Button.Text = "Click Me!"
end)
